{
  "name": "@diva-e/xwalk-boilerplate",
  "private": true,
  "version": "0.0.1",
  "description": "diva-e AEM-XWalk Boilerplate",
  "scripts": {
    "aemUp": "aem up",
    "build": "tsc && vite build -c vite.config.ts && vite build -c vite.config-editor.ts",
    "build:watch": "run-p tsc:watch vite:watch",
    "build:doc": "ts-node  -O '{\"module\": \"commonjs\"}' ./tools/doc/generate.ts",
    "lint:js": "eslint 'src/**/!(*-toc).{js,json,ts}'",
    "lint:js:fix": "eslint --fix 'src/**/!(*-toc).{js,json,ts}'",
    "lint:css": "stylelint src/**/*.scss",
    "lint:css:fix": "stylelint --fix src/**/*.scss",
    "lint": "npm-run-all --parallel lint:js lint:css",
    "lint:fix": "npm-run-all --parallel lint:js:fix lint:css:fix",
    "new": "pv-create-component --config tools/create-component/config.js",
    "start": "npm-run-all --parallel build:watch aemUp",
    "tsc:watch": "tsc -w",
    "vite": "vite",
    "vite:watch": "vite build -w",
    "prepare": "husky",
    "husky:pre-commit": "npm-run-all --parallel lint:js lint:css",
    "test": "jest",
    "test:ci": "jest --ci",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/diva-e-aem/xwalk-boilerplate.git"
  },
  "author": "diva-e",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/diva-e-aem/xwalk-boilerplate/issues"
  },
  "homepage": "https://github.com/diva-e-aem/xwalk-boilerplate#readme",
  "devDependencies": {
    "@adobe/aem-cli": "^16.3.15",
    "@babel/core": "7.23.7",
    "@babel/eslint-parser": "7.23.3",
    "@pro-vision/eslint-config-pv": "^4.0.0",
    "@pro-vision/pv-create-component": "^0.2.0",
    "@pro-vision/stylelint-config-pv": "^4.0.0",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "6.20.0",
    "@typescript-eslint/parser": "6.20.0",
    "chai": "5.0.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-html": "7.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prettier": "5.1.3",
    "husky": "^9.0.11",
    "intersection-observer": "^0.12.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.2.4",
    "rollup-plugin-minify-html-literals": "1.2.6",
    "sass": "1.70.0",
    "stylelint": "16.1.0",
    "stylelint-config-recommended-scss": "^14.0.0",
    "stylelint-prettier": "^5.0.0",
    "stylelint-scss": "^6.1.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsdoc-markdown": "^0.6.0",
    "typescript": "5.3.3",
    "vite": "5.0.12"
  },
  "dependencies": {
    "@kluntje/js-utils": "0.7.2",
    "@kluntje/services": "^0.6.6",
    "lit": "3.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">10.2.0"
  }
}
